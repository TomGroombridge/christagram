
  <div class="container">

    <% @posts.in_groups_of(2, false) do |post_row| %>
      <div class="row">
        <% post_row.each do |post| %>
          <div class="col-md-6">
            <div class="well well-sm">
              <div class="row">
                <div class="col-xs-6 col-md-6 text-center" style= "height: 225px">
                  <%= image_tag post.image.url(:thumb), class: "christagram-upload img-rounded img-responsive" %>
                </div>
                <div class="col-xs-6 col-md-6 section-box">
                  <h2><%= link_to post.title, post_path(post) %></h2>
                  <p class='desc'> <%= post.content %> </p>    
                  <p>
                    <% post.tags.each do |tag| %>
                    <%= link_to tag, tag_posts_path(tag) %>
                    <% end %>&nbsp;
                  </p>
                  </p>
        <p> Created <%= time_ago_in_words post.created_at %> ago </p>
                  <hr />
                          <button><%= link_to "del", post_path(post), :method => :delete, data: { confirm: 'Are you sure?' } %></button>
        <button><%= link_to "edit", edit_post_path(post) %></button>
        <button><%= link_to "comment", post_path(post) %></button>
        <button><%= link_to "buy print", post_path(post) %></button>
                  <div class="row rating-desc">
                    <div class="col-md-12">
                      <span class="glyphicon glyphicon-heart"></span><span class="glyphicon glyphicon-heart">
                      </span><span class="glyphicon glyphicon-heart"></span><span class="glyphicon glyphicon-heart">
                      </span><span class="glyphicon glyphicon-heart"></span>(36)<span class="separator">|</span>
                      <span class="glyphicon glyphicon-comment"></span>(100 Comments)
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% end %>

  </div>