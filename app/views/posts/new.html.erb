  
<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl"><div class="upload">{%=o.name%}<div class="progress"><div class="bar" style="width: 0%"></div></div></div></script>

<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" id="login"> <!-- id="login"> -->
      <h2>Add your image!</h2>
      <h3><small></small></h3>
      <hr class="colorgraph">
        <%= form_for @post, html: { multipart: true, }, :html => {:class => "form-group"} do |form| %>
      <div class="form-group">  
          <%= form.text_field :title, class: 'form-control input-lg', placeholder: 'title' %> 
      </div>
      <div class="form-group">
          <%= form.text_area :content, class: 'form-control input-lg', placeholder: 'content' %>
      </div>
      <div class="form-group">
          <%= form.text_field :tag_names, class: 'form-control input-lg', placeholder: 'tags' %>
      </div>
      <div class="form-group">
          <%= form.file_field :image %>
      </div>

      <hr class="colorgraph">

      <div class="row">
        <div class="col-md-4">
        <%= form.submit 'Post!', :class => 'btn btn-success btn-block btn-lg', :id => 'addpost' %>
      <% end %>
        </div>
        <div class="col-md-2">
        <%= link_to 'cancel', posts_path, :class => 'btn btn-danger btn-block btn-lg', :id => 'addpost' %>
        </div>
      </div>
  </div>
</div>
</div>
